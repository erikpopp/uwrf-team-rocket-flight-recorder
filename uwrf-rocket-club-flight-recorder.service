[Unit]
Description=UWRF Rocket Club Flight Recorder
Documentation=https://github.com/erikpopp/
After=network.target

[Service]
Environment=NODE_PORT=80
Type=simple
User=root
ExecStart=/root/n/bin/node /root/uwrf-rocket-club-flight-recorder/server.js
Restart=on-failure

[Install]
WantedBy=multi-user.target
